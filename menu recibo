<?php 
require_once 'conexion/conexion.php'; 
session_start();
if (!isset($_SESSION['loggedin']) || $_SESSION['loggedin'] !== true) {
    header('Location: index.php'); // redirige al usuario a la página de inicio de sesión
    exit;
}
$user=$_SESSION['name'];
$apelli=$_SESSION['apell'];
$usuario=$_SESSION['usuario_i'];

$sql =( "SELECT COUNT(*) as total_categorias FROM categoria");
$resultado = iniciarconexion()->query($sql);
$row = $resultado->fetch_assoc();
$total_orders = $row['total_categorias'];

$sql1 =( "SELECT COUNT(*) as total_gastos FROM gastos");
$resultado = iniciarconexion()->query($sql1);
$row = $resultado->fetch_assoc();
$total_gastos = $row['total_gastos'];
$sql2 =( "SELECT COUNT(*) as total_recet FROM recibo");
$resultado = iniciarconexion()->query($sql2);
$row = $resultado->fetch_assoc();
$total_re_es = $row['total_recet'];

$sql3 =( "SELECT COUNT(*) as total_reciot FROM recibo_otros");
$resultado = iniciarconexion()->query($sql3);
$row = $resultado->fetch_assoc();
$total_re_ot = $row['total_reciot'];
iniciarconexion()->close();
