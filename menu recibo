<script>
document.addEventListener("DOMContentLoaded", function() {
    var radioSi = document.querySelector('input[value="si"]');
    var radioNo = document.querySelector('input[value="no"]');
    var ncedula = document.getElementById("campoInput");
     var enviar = document.getElementById("Enviar");
     var nuevo = document.getElementById("campoInput1");
    radioSi.addEventListener("change", function() {
        if (radioSi.checked) {
            ncedula.style.display = "block";
            enviar.style.display="block";
            nuevo.style.display = "none";
        }
    });

    radioNo.addEventListener("change", function() {
        if (radioNo.checked) {
          ncedula.style.display = "none";
            enviar.style.display="none";
            nuevo.style.display = "block";
            nuevo.addEventListener("click", function() {
        window.location.href = "recibo_otros.php";
    });
        }
    });
});
</script>
